{
    "version": "2.0.0",
    "command": "ng",
    "presentation": {
        "panel": "dedicated",
        "clear": true
    },
    "tasks": [
        {
            "label": "lint",
            "args": [
                "lint"
            ]
        },
        {
            "label": "build",
            "args": [
                "build"
            ]
        },
        {
            "label": "test",
            "args": [
                "test",
                "--watch=false"
            ]
        },
        {
            "label": "run",
            "command": "ng",
            "args": [
                "serve"
            ]
        }
    ]
}
