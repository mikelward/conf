[user]
	name = Mikel Ward
	email = mikel@mikelward.com

[core]
	excludesfile = /home/mikel/.gitexclude

[alias]
    amend = commit --amend
    changed = diff
    diffstat = diff --stat -r
    log1 = log --pretty=oneline --abbrev-commit --decorate
    logg = log --pretty=oneline --abbrev-commit --decorate --graph
    logp = log --pretty=tformat:'%h%x09%ar%x09%s' --graph
    recent = log --pretty=tformat:'%h%x09%ar%x09%s' --graph --since='-1 month'
    stage = add --update
    staged = diff --cached
    track = add --intent-to-add
    unadd = reset HEAD --
    unstage = reset HEAD --
    unstaged = diff
    untrack = rm --cached --
    who = shortlog -s --

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[log]
    date = relative

[svn]
    authorsfile = /home/mikel/.gitauthors
