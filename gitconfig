[user]
	name = Mikel Ward
	email = mikel@mikelward.com

[core]
	excludesfile = /home/mikel/.gitexclude

# git command aliases
# where possible, use a name that's not a Unix command
# so I can make it a shell alias too
[alias]
    added = diff --cached --ignore-all-space
    addremove = add --update
    amend = commit --amend
    changed = diff --ignore-all-space
    hist = log --pretty=oneline --abbrev-commit
    remove = rm --cached
    # XXX why does this print "needs update"?
    unadd = reset HEAD
    unadded = diff --ignore-all-space
    uncommitted = diff --cached --ignore-all-space
    # these should be called revert, but that name is taken
    undo = checkout HEAD
    undoall = reset --hard

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[diff]
    renames = true

[log]
    date = relative

[svn]
    authorsfile = /home/mikel/.gitauthors
