[user]
	name = Mikel Ward
	email = mikel@mikelward.com

[core]
	excludesfile = /home/mikel/.gitexclude

[alias]
    amend = commit --amend
    changed = diff
    diffstat = diff --stat -r
    last = log -1
    logg = log --graph --pretty=oneline --abbrev-commit --decorate
    logl = log --date=local
    stage = add --update
    staged = diff --cached
    track = add --intent-to-add
    unadd = reset HEAD --
    unstage = reset HEAD --
    unstaged = diff
    untrack = rm --cached --
    who = shortlog -s --

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[svn]
    authorsfile = /home/mikel/.gitauthors
