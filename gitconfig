[user]
	name = Mikel Ward
	email = mikel@mikelward.com

[core]
	excludesfile = /home/mikel/.gitexclude

# git command aliases
# where possible, use a name that's not a Unix command
# so I can make it a shell alias too
[alias]
    addall = add --all
    added = diff --cached --name-only
    addremove = add --update
    adds = diff --cached
    amend = commit --amend
    changed = diff --name-only
    changes = diff
    commitall = commit --all
    diffstat = diff --stat
    graph = log --graph --pretty=oneline --decorate --abbrev-commit
    hist = log --pretty=oneline --abbrev-commit
    remove = rm --cached
    #rollback = revert
    #rollback = reset --hard
    state = status --short
    switch = checkout
    track = add --intent-to-add
    # XXX why does this print "needs update"?
    unadd = reset HEAD
    unchange = checkout-index --force
    unchangeall = checkout-index --force --all
    # these should be called revert, but that name is taken
    undo = checkout HEAD
    undoall = reset --hard
    untrack = rm --cached

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[diff]
    renames = true

[log]
    date = relative

[svn]
    authorsfile = /home/mikel/.gitauthors
