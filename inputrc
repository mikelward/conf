# Readline configuration

# include the system-wide defaults
$include /etc/inputrc

# general settings
set bell-style visible
set completion-ignore-case on
set horizontal-scroll-mode off
set mark-directories on
set prefer-visible-bell on
set show-all-if-ambiguous on
set visible-stats on

# emacs mode customizations
set keymap emacs
$if Bash
"\eb": vi-bWord
"\eB": vi-bWord
"\ed": shell-kill-word
"\eD": shell-kill-word
"\ef": vi-fWord
"\eF": vi-fWord
$else
"\eb": backward-word
"\eB": backward-word
"\ed": kill-word
"\eD": kill-word
"\ef": forward-word
"\eF": forward-word
$endif
"\en": history-search-forward
"\ep": history-search-backward
"\ew": copy-region-as-kill
"\e\C-?": unix-word-rubout
"\eOH": beginning-of-line
"\e[1~": beginning-of-line
"\eOF": end-of-line
"\e[4~": end-of-line
"\e[3~": delete-char
"\e[A": history-search-backward
"\e[B": history-search-forward

# vi mode customizations
set keymap vi-insert
"\C-a": beginning-of-line
"\C-e": end-of-line
"\C-n": next-history
"\C-p": previous-history
"\C-r": reverse-search-history
"\C-s": forward-search-history
"\C-w": backward-kill-word
"\C-y": yank
$if Bash
"\eb": vi-bWord
"\eB": vi-bWord
"\ed": shell-kill-word
"\eD": shell-kill-word
"\ef": vi-fWord
"\eF": vi-fWord
$else
"\eb": backward-word
"\eB": backward-word
"\ed": kill-word
"\eD": kill-word
"\ef": forward-word
"\eF": forward-word
$endif
"\ey": yank-pop
"\eOH": beginning-of-line
"\e[1~": beginning-of-line
"\eOF": end-of-line
"\e[4~": end-of-line
"\e[3~": delete-char
set keymap vi-command
"\C-a": beginning-of-line
"\C-e": end-of-line
"\C-n": next-history
"\C-p": previous-history
"\C-r": reverse-search-history
"\C-s": forward-search-history
"\C-w": backward-kill-word
"\C-y": yank
$if Bash
"\eb": vi-bWord
"\eB": vi-bWord
"\ed": shell-kill-word
"\eD": shell-kill-word
"\ef": vi-fWord
"\eF": vi-fWord
$else
"\eb": backward-word
"\eB": backward-word
"\ed": kill-word
"\eD": kill-word
"\ef": forward-word
"\eF": forward-word
$endif
"\ey": yank-pop
"\eOH": beginning-of-line
"\e[1~": beginning-of-line
"\eOF": end-of-line
"\e[4~": end-of-line
"\e[3~": delete-char
"\e": vi-insertion-mode

# use emacs mode by default
set keymap emacs
set editing-mode emacs

