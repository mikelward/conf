        format_down = ""
}

disk "/" {
        format = ""
        low_threshold = 20
        format_below_threshold = "%free free"
}

battery all {
        format = "%status%percentage"
        format_down = ""
        integer_battery_capacity = true
        last_full_capacity = true
        status_chr = "ï‡¦"
        status_bat = "ï‰€"
        # status is unknown when charging using my USB-C hub
        status_unk = "ï‡¦"
        status_full = ""
}

volume master {
        format = "ðŸ”‰%volume"
        format_muted = "ðŸ”‡"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime datetime {
        format = "%a %b %d %H:%M"
}

tztime adelaide {
        format = "(%H:%M %Z)"
        timezone = "Australia/Adelaide"
        hide_if_equals_localtime = true
}

tztime london {
        format = "(%H:%M %Z)"
        timezone = "Europe/London"
        hide_if_equals_localtime = true
}

tztime sunnyvale {
        format = "(%H:%M %Z)"
        timezone = "America/Los_Angeles"
