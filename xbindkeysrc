	Mod4 + f

# lock screen
"gnome-screensaver-command -l"
	Mod4 + l

# mail
"evolution -c mail"
	Mod4 + m

# notepad
#"mousepad"
"gedit"
	Mod4 + n

# pidgin im
"pidgin"
	Mod4 + p

# terminal
"xfterm4"
	Mod4 + t

# word
"oowriter"
	Mod4 + w

# excel
"oocalc"
	Mod4 + x

# mute
"amixer set Master toggle"
	Mod4 + KP_Delete

# play/pause
"rhythmbox-client --play-pause"
	Mod4 + KP_Insert

# volume down
"amixer set Master 10%-"
	Mod4 + Down

# volume up
"amixer set Master 10%+"
	Mod4 + Up

# XXX would be nice to figure out how to send XF86AudioNext, etc.
# next song
"rhythmbox-client --next"
	Mod4 + Right

# previous song
"rhythmbox-client --previous"
	Mod4 + Left

