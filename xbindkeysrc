#
# A list of keys is in /usr/include/X11/keysym.h and in
# /usr/include/X11/keysymdef.h
# The XK_ is not needed.
#
# List of modifier:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).
#

# b = (an unused key)
"hangouts"
	Mod4 + b

"google-calendar"
	Mod4 + c

"firefox"
	Mod4 + f

#"chromium-browser"
"google-chrome"
	Mod4 + g

# h = home folder
#"thunar"
"nautilus ~"
	Mod4 + h

# i = IRC
"xchat"
	Mod4 + i

# l = lock screen
"gnome-screensaver-command -l"
	Mod4 + l

# mail
"gmail"
	Mod4 + m

# n = notepad
"leafpad"
	Mod4 + n

# p = pycharm
"env JAVA_HOME=/usr/java/current charm"
	Mod4 + p

# s = shell
"shell"
	Mod4 + s

# t = terminal
#"terminator"
"gnome-terminal"
	Mod4 + t

# mute
"amixer set Master toggle"
	Mod4 + KP_Delete

"amixer set Master toggle"
	Mod4 + Delete

# play/pause
"rhythmbox-client --play-pause"
	Mod4 + KP_Insert

"rhythmbox-client --play-pause"
	Mod4 + Insert

# volume down
#"amixer set Master 5%-"
"amixer set 'Master Front' 5%-"
	Mod4 + Down

# volume up
"amixer set 'Master Front' 5%+"
	Mod4 + Up

# XXX would be nice to figure out how to send XF86AudioNext, etc.
# next song
"rhythmbox-client --next"
	Mod4 + Right

# previous song
"rhythmbox-client --previous"
	Mod4 + Left

# screen shot (print screen)
#"gnome-screenshot"
#"xfce4-screenshooter -f"
#	Print

"snap left"
    Mod4 + Shift + Left

"snap right"
    Mod4 + Shift + Right

"moveto 1"
    Mod4 + Shift + 1

"moveto 2"
    Mod4 + Shift + 2

"moveto 3"
    Mod4 + Shift + 3

"moveto 4"
    Mod4 + Shift + 4
