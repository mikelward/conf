[extensions]
hgext.extdiff =

[extdiff]
cmd.vdiff = meld

[pager]
pager = less -FRX

[templates]
shortnode = "{label('log.changeset', shortest(node, 7))}"
shortdate = "{label('log.date', date|shortdate)}"
shortdesc = "{desc|firstline}"
oneline = "{shortnode} {shortdate} {shortdesc}\n"

[ui]
ignore = ~/.hgexclude
merge = meld

[hooks]
#precommit = precommit

