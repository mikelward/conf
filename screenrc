# $Id$
# Screen configuration file

startup_message off

vbell off

bind = resize =
bind + resize +1
bind - resize -1
bind _ resize max

escape ^]^]

#hardstatus on
#hardstatus alwayslastline
#hardstatus string " %w %= %C%a "

# disable screen's scrolling, etc., so it acts like a plain old terminal
hardstatus string "%t"
altscreen on
termcapinfo * ti@:te@
